<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Jewelry</li>
    </mods>

    <match Class="PatchOperationSequence">

		<operations>
		
			<!-- add gem type -->
			
			<li Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "MorrowRim_Glass"]/stuffProps/categories</xpath>
				<value>
					<li>Gemstones</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "MorrowRim_Ebony"]/stuffProps/categories</xpath>
				<value>
					<li>Gemstones</li>
				</value>
			</li>
		
		</operations>

    </match>
  </Operation>

</Patch>
